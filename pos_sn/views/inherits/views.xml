<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- HERENCIA DEL MODELO PRODUCT.TEMPLATE-->
    <data>
        <record id="view_product_template_inherit_form" model="ir.ui.view">
            <field name="name">product.template.inherit.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_policy']" position="after">
                    <field name="notes"/>
                </xpath>
            </field>
        </record>
    </data>

    <!-- HERENCIA DEL MODELO SALE.ORDER-->
    <data>
        <record id="view_sale_inherit_form" model="ir.ui.view">
            <field name="name">sale.inherit.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button type="object" string="Required" name="action_set_required" class="btn-danger" confirm="Est√° seguro de aplicar estado 'REQUERIDO' a esta orden?"/>
                    <button type="object" string="Preparing" name="action_set_preparing" class="btn-warning" confirm="Est√° seguro de aplicar estado 'EN PREPARACION' a esta orden?"/>
                    <button type="object" string="Ready" name="action_set_ready" class="btn-info" confirm="Est√° seguro de aplicar estado 'LISTO' a esta orden?"/>
                    <button type="object" string="Dispatched" name="action_set_dispatched" class="btn-success" confirm="Est√° seguro de aplicar estado 'DESPACHADO' a esta orden?"/>
                    <button type="object" string="Ended" name="action_set_ended" class="btn-dark" confirm="Est√° seguro de aplicar estado 'FINALIZADO' a esta orden?"/>
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="order_status"/>
                    <field name="table_number"/>
                </xpath>
            </field>
        </record>
    </data>

    <!-- BOTON PARA COMPLETAR LAS FABRICACIONES DE UNA SESION EN UN SOLO CLIC -->
    <data>
        <record id="action_complete_mo" model="ir.actions.server">
            <field name="name">Completar √ìrdenes de Fabricaci√≥n</field>
            <field name="model_id" ref="point_of_sale.model_pos_session"/>
            <field name="state">code</field>
            <field name="code">record.completar_fabricacion()</field>
        </record>
    </data>

    <record id="view_pos_session_form" model="ir.ui.view">
        <field name="name">pos.session.form.inherit</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
        <field name="arch" type="xml">
            <header>
                <!-- invisible="state in ['opening_control', 'opened']" -->
                <!--button name="%(action_complete_mo)d" string="üõ†Ô∏è Completar Fabricaci√≥n" type="action" class="btn-primary" invisible="state in ['opening_control', 'opened']"/-->
                <button name="completar_fabricacion" string="üõ†Ô∏è Completar Fabricaci√≥n" type="object" class="btn-primary" invisible="state in ['opening_control', 'opened']"/>
            </header>
        </field>
    </record>
    
